@model IEnumerable<TruckCheckUp.Core.Models.PartCategory>

@{
    ViewBag.Title = "Part Categories";
}

<h2>Part Categories</h2>
<p>
    @Html.ActionLink("Back to Administration Page", "Index", "Administration")
</p>
<p>
    @Html.ActionLink("Add New Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryPart)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryPart)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { Id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { Id=item.Id })
        </td>
    </tr>
}

</table>
