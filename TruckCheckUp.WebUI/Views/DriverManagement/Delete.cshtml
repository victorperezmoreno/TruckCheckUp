@model TruckCheckUp.Core.Models.Driver

@{
    ViewBag.Title = "Delete a Driver";
}

<h2>Delete a Driver</h2>

<h3>Are you sure you want to delete this Driver?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
            @if (Model.Status)
            {
                <span class="text-success"><b>@Html.DisplayFor(model => model.MessageBasedOnStatusSelection)</b></span>
            }
            else
            {
                <span class="text-danger"><b>@Html.DisplayFor(model => model.MessageBasedOnStatusSelection)</b></span>

            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List of Drivers", "Index")
        </div>
    }
</div>
